        <open file="./npc-talent.xml" />
        <open file="./npc-knowledge.xml" />
        <mannerism />
        <interaction />
        <bond />
        <open file="./npc-ideal.xml" />
        <flaw />
    </template>
    <template name="standardNPC"><commonAttributes /></template>
    <template name="villainNPC">
        <commonAttributes />
        <threatLevel />
    </template>
