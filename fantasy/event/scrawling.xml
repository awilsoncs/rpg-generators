<generator>
    <template>'<phrase />' is <medium /></template>
    <set name="phrase">
        <el weight="0.02"><gibberishPhrase /></el>
        <el weight="1.0"><subject /> <verb /><object /></el>
    </set>
    <set name="medium">
        <el>scrawled in blood.</el>
        <el>scrawled in ashes.</el>
        <el>scrawled in mud.</el>
        <el>written in charcoal.</el>
        <el>scratched in the dirt.</el>
    </set>
    <set name="subject">
        <el>The <sel name="noun"/></el>
        <el><sel name="pronoun"/></el>
    </set>
    <set name="object">
        <el></el>
        <el> the <noun /></el>
        <el> <objectPronoun /></el>
    </set>
    <set name="noun">
        <el>arcane</el>
        <el>beast</el>
        <el>blood</el>
        <el>bone</el>
        <el>cut</el>
        <el>chief</el>
        <el>child</el>
        <el>dagger</el>
        <el>dark</el>
