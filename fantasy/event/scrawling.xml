        <el>stone</el>
        <el>sword</el>
        <el>thief</el>
        <el>throat</el>
        <el>trap</el>
        <el>tree</el>
        <el>man</el>
        <el>woman</el>
        <el><gibberishWord /></el>
    </set>
    <set name="pronoun">
        <el>He</el>
        <el>She</el>
        <el>It</el>
        <el>One</el>
    </set>
    <set name="objectPronoun">
        <el>him</el>
        <el>her</el>
        <el>it</el>
        <el>them</el>
    </set>
    <set name="verb">
        <el>breathes</el>
        <el>cuts</el>
        <el>cut</el>
        <el>draws</el>
        <el>drew</el>
        <el>ends</el>
        <el>ended</el>
        <el>forgives</el>
        <el>forgave</el>
        <el>kills</el>
        <el>killed</el>
        <el>wears</el>
        <el>wore</el>
        <el>hid</el>
    </set>
    <set name="randomGibberish">
        <el><gibberishWord /></el>
        <el><gibberishPhrase /></el>
    </set>
    <set name="gibberishPhrase">
        <el><randomWord /> <randomWord /> <randomWord /></el>
        <el><randomWord /> <randomWord /></el>
    </set>
    <set name="randomWord">
        <el><verb /></el>
        <el><object /></el>
        <el><pronoun /></el>
        <el><objectPronoun /></el>
    </set>
    <set name="gibberishWord">
        <el weight="1.0"><letter /><letter /></el>
        <el weight="1.25"><gibberishWord /><letter /><letter /></el>
    </set>
